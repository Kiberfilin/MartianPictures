<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MartianPicturesMainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--edge-to-edge settings-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBar</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.MartianPicturesMainTheme">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorMainText</item>
        <item name="android:textColorSecondary">@color/colorMainText</item>
        <item name="colorPrimary">@color/colorShadeForFrontEndElements</item>
    </style>
</resources>